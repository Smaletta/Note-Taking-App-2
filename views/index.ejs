<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note Taking App</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/navbar') %>
        <div class="container mt-5 pt-5">
            <h1 class="mt-5 text-center">Notes</h1>
            <% if (typeof error !=="undefined" ) { %>
                <div class="alert alert-danger text-center text-bg-danger" id="message-warning">
                    <h3>
                        <%= error.message %>
                    </h3>
                </div>
                <% } %>
                    <div id="content">
                        <div class="row">
                            <% notes.forEach(note=> { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100" id="<%= note.id %>">
                                        <a class="card-body" href="/note/<%= note.id %>">
                                            <h5 class="card-title text-center">
                                                <%= note.titlePreview %>
                                            </h5>
                                            <p class="card-text">
                                                <%= note.preview %>
                                            </p>
                                        </a>
                                        <button class="btn btn-danger float-end" value="<%= note.id %>"
                                            onclick="deleteNote(value); return false">Delete</button>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                    </div>
        </div>

        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
            <script src="/js/script.js"></script>
</body>

</html>